</extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.layoutAs"
            name="Layout As">
         <commandParameter
               id="edu.unikiel.rtsys.kieler.kiml.ui.command.layoutAs.parameter.layouterName"
               name="layouterName"
               optional="true">
         </commandParameter>
      </command>
      <command
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.groupAs"
            name="Group As">
         <commandParameter
               id="edu.unikiel.rtsys.kieler.kiml.ui.command.groupAs.parameter.layouterName"
               name="layouterName"
               optional="true">
         </commandParameter>
      </command>
      <command
            description="%command.description.6"
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.highlightGroupMembers"
            name="%command.name.6">
      </command>
      <command
            description="%command.description.7"
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.selectGroupMembers"
            name="%command.name.7">
      </command>
      <command
            description="%command.description.8"
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.ungroupElements"
            name="%command.name.8">
      </command>
      <command
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.kimlLayout"
            name="KIML Layout">
      </command>
      <command
            id="edu.unikiel.rtsys.kieler.kiml.ui.command.kimlLayoutAll"
            name="KIML Layout All">
      </command>
      <commandParameterType
            id="edu.unikiel.rtsys.kieler.kiml.ui.commandParameterType.String"
            type="java.lang.String">
      </commandParameterType>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.LayoutAsHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.layoutAs">
      </handler>
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.GroupFunctionHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.selectGroupMembers">
         <enabledWhen>
            <reference
                  definitionId="KIML.generalSelectionIs1ShapeNodeEditPart">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.GroupFunctionHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.highlightGroupMembers">
         <enabledWhen>
            <reference
                  definitionId="KIML.generalSelectionIs1ShapeNodeEditPart">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.GroupFunctionHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.ungroupElements">
         <enabledWhen>
            <reference
                  definitionId="KIML.generalSelectionIs1OrMoreShapeNodeEditParts">
            </reference>
         </enabledWhen>
      </handler>
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.KimlLayoutHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.kimlLayout">
      </handler>
      <handler
            class="edu.unikiel.rtsys.kieler.kiml.ui.handlers.KimlLayoutHandler"
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.kimlLayoutAll">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="KIML.2OrMore">
         <and>
            <not>
               <count
                     value="?">
               </count>
            </not>
            <count
                  value="+">
            </count>
         </and>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1">
         <with
               variable="activeMenuSelection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1ShapeNodeEditPart">
         <with
               variable="activeMenuSelection">
            <and>
               <iterate
                     operator="and">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="1">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1OrMoreShapeNodeEditParts">
         <with
               variable="activeMenuSelection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="+">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1OrMore">
         <with
               variable="activeMenuSelection">
            <count
                  value="+">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs2OrMore">
         <with
               variable="activeMenuSelection">
            <reference
                  definitionId="KIML.2OrMore">
            </reference>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs2OrMoreShapeNodeEditParts">
         <with
               variable="activeMenuSelection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <reference
                     definitionId="KIML.2OrMore">
               </reference>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1ShapeNodeEditPart">
         <with
               variable="selection">
            <and>
               <iterate
                     operator="and">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="1">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1OrMore">
         <with
               variable="selection">
            <count
                  value="+">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1OrMoreShapeNodeEditParts">
         <with
               variable="selection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="+">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs2OrMore">
         <with
               variable="selection">
            <reference
                  definitionId="KIML.2OrMore">
            </reference>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs2OrMoreShapeNodeEditParts">
         <with
               variable="selection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <reference
                     definitionId="KIML.2OrMore">
               </reference>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.generalSelectionIs1">
         <or>
            <reference
                  definitionId="KIML.selectionIs1">
            </reference>
            <reference
                  definitionId="KIML.activeMenuSelectionIs1">
            </reference>
         </or>
      </definition>
      <definition
            id="KIML.generalSelectionIs1OrMore">
         <or>
            <reference
                  definitionId="KIML.activeMenuSelectionIs1OrMore">
            </reference>
            <reference
                  definitionId="KIML.selectionIs1OrMore">
            </reference>
         </or>
      </definition>
      <definition
            id="KIML.generalSelectionIs1ShapeNodeEditPart">
         <or>
            <reference
                  definitionId="KIML.activeMenuSelectionIs1ShapeNodeEditPart">
            </reference>
            <reference
                  definitionId="KIML.selectionIs1ShapeNodeEditPart">
            </reference>
         </or>
      </definition>
      <definition
            id="KIML.generalSelectionIs1OrMoreShapeNodeEditParts">
         <or>
            <reference
                  definitionId="KIML.activeMenuSelectionIs1OrMoreShapeNodeEditParts">
            </reference>
            <reference
                  definitionId="KIML.selectionIs1OrMoreShapeNodeEditParts">
            </reference>
         </or>
      </definition>
      <definition
            id="KIML.generalSelectionIs2OrMore">
         <or>
            <reference
                  definitionId="KIML.activeMenuSelectionIs2OrMore">
            </reference>
            <reference
                  definitionId="KIML.selectionIs2OrMore">
            </reference>
         </or>
      </definition>
      <definition
            id="KIML.generalSelectionIs2OrMoreShapeNodeEditParts">
         <or>
            <reference
                  definitionId="KIML.activeMenuSelectionIs2OrMoreShapeNodeEditParts">
            </reference>
            <reference
                  definitionId="KIML.selectionIs2OrMoreShapeNodeEditParts">
            </reference>
         </or>
      </definition>
   </extension>
   <extension
         point="edu.unikiel.rtsys.kieler.kiml.layout.kimlDiagramLayouter">
