<menuContribution
      locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
   <toolbar
         id="edu.unikiel.rtsys.kieler.kiml.ui.toolbar.main">
      <command
            commandId="edu.unikiel.rtsys.kieler.kiml.ui.command.kimlLayout"
