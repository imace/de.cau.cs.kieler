   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="KIML.2OrMore">
         <and>
            <not>
               <count
                     value="?">
               </count>
            </not>
            <count
                  value="+">
            </count>
         </and>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1">
         <with
               variable="activeMenuSelection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1OrMoreShapeNodeEditParts">
         <with
               variable="activeMenuSelection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="+">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs1OrMore">
         <with
               variable="activeMenuSelection">
            <count
                  value="+">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs2OrMore">
         <with
               variable="activeMenuSelection">
            <reference
                  definitionId="KIML.2OrMore">
            </reference>
         </with>
      </definition>
      <definition
            id="KIML.activeMenuSelectionIs2OrMoreShapeNodeEditParts">
         <with
               variable="activeMenuSelection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <reference
                     definitionId="KIML.2OrMore">
               </reference>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1OrMore">
         <with
               variable="selection">
            <count
                  value="+">
            </count>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs1OrMoreShapeNodeEditParts">
         <with
               variable="selection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <count
                     value="+">
               </count>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs2OrMore">
         <with
               variable="selection">
            <reference
                  definitionId="KIML.2OrMore">
            </reference>
         </with>
      </definition>
      <definition
            id="KIML.selectionIs2OrMoreShapeNodeEditParts">
         <with
               variable="selection">
            <and>
               <iterate
                     operator="or">
                  <adapt
                        type="org.eclipse.gmf.runtime.diagram.ui.editparts.ShapeNodeEditPart">
                  </adapt>
               </iterate>
               <reference
                     definitionId="KIML.2OrMore">
               </reference>
            </and>
         </with>
      </definition>
      <definition
            id="KIML.generalSelectionIs1">
         <or>
            <reference
                  definitionId="KIML.selectionIs1">
            </reference>
            <reference
                  definitionId="KIML.activeMenuSelectionIs1">
            </reference>
         </or>
      </definition>
      <definition
