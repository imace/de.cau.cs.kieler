<workflow>
    <property name="doCheck" value="true"/>
    <bean class="org.eclipse.mwe.emf.StandaloneSetup"/>
    <bean class="de.cau.cs.kieler.synccharts.dsl.MetaModelRegistration"/>
	<component id="scdsl-parser" class="de.cau.cs.kieler.synccharts.dsl.parser.ParserComponent">
		<modelFile value="${modelFile}"/>
		<outputSlot value="${outputSlot}"/>
	</component>
	<if cond="${doCheck}">
		<component id="scdsl-checker" class="oaw.check.CheckComponent">
	       <metaModel id="mm" class="org.eclipse.m2t.type.emf.EmfRegistryMetaModel"/>
	       <expression value="${outputSlot}.eAllContents.union({${outputSlot}})"/>
		   <checkFile value="de::cau::cs::kieler::synccharts::dsl::GenChecks"/>
		   <checkFile value="de::cau::cs::kieler::synccharts::dsl::Checks"/>
		</component>
	</if>
</workflow>
