	<target name="findbugs" unless="no.findbugs"
	    description="running findbugs (configured by ${scriptdir}/build.xml)">
		<path id="findbugs.auxClasses">
${feature.classpath}			<fileset dir="${basedir}/plugins" includes="**/*.jar" />
		</path>

		<path id="findbugs.sources">
			<dirset dir="${findbugs.sources}" includes="**/src,**/srcgen,**/src-gen" />
		</path>

		<findbugs home="${findbugs.home}"
			  output="xml"
			  outputFile="${basedir}/findbugs.report.xml"
			  auxClasspathRef="findbugs.auxClasses"
			  sourcePathRef="findbugs.sources"
			  reportLevel="low"
			  effort="default"
			  failOnError="false"
			  errorProperty="findbugs.errors"
			  warningsProperty="findbugs.warnings">
			<class location="${findbugs.classes}" />
		</findbugs>
	</target>

