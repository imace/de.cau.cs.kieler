	<target name="checkstyle" unless="no.findbugs"
	    description="running checkstyle (configured by ${scriptdir}/build.xml)">
			<checkstyle config="${scriptdir}/checks.xml"
				failureProperty="checkstyle.failure"
			    failOnViolation="false">
			<formatter type="xml"
				   tofile="${basedir}/checkstyle.report.xml" />
			<fileset dir="${checkstyle.sources}"
				 includes="**/*.java"
				 excludes="${checkstyle.excludes}" />
		</checkstyle>
	</target>

