	<target name="pmd" unless="no.pmd"
	    description="running pmd (configured by ${scriptdir}/build.xml)">

		<path id="pmd.classpath">
			<fileset dir="${basedir}/plugins" includes="**/*.jar" />
		</path> 
		
		<pmd shortFilenames="true">
			<ruleset>rulesets/codesize.xml</ruleset>
			<formatter type="xml"
			    tofile="${basedir}/pmd.report.xml" />
			<fileset dir="${pmd.sources}"
			    includes="**/*.java"
			    excludes="${pmd.excludes}" />
		</pmd>
	</target>

