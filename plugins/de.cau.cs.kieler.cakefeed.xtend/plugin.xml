<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.gmf.runtime.diagram.ui.DiagramEditorContextMenu?after=addGroup">
         <command
               commandId="de.cau.cs.kieler.cakefeed.xtend.import"
               label="Import"
               style="push"
               tooltip="Import FunctionBlocks which are stored in XML format.">
         </command>
         <command
               commandId="de.cau.cs.kieler.cakefeed.xtend.export"
               label="Export"
               style="push"
               tooltip="Export FunctionBlocks to XML format.">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands related to CAKeFEED diagrams."
            id="org.eclipse.gmf.category.cakefeed"
            name="CAKeFEED">
      </category>
      <command
            categoryId="org.eclipse.gmf.category.cakefeed"
            defaultHandler="de.cau.cs.kieler.cakefeed.xtend.handler.ImportHandler"
            description="Imports FunctionBlocks which are stored in XML format."
            id="de.cau.cs.kieler.cakefeed.xtend.import"
            name="Import">
      </command>
      <command
            categoryId="org.eclipse.gmf.category.cakefeed"
            defaultHandler="de.cau.cs.kieler.cakefeed.xtend.handler.ExportHandler"
            description="Exports FunctionBlocks to XML format."
            id="de.cau.cs.kieler.cakefeed.xtend.export"
            name="Export">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <category
            id="de.cau.cs.kieler.cakefeed.xtend.importWizards.sampleCategory"
            name="Sample File Import">
      </category>
      <wizard
            category="de.cau.cs.kieler.cakefeed.xtend.importWizards.sampleCategory"
            class="de.cau.cs.kieler.cakefeed.xtend.importWizards.ImportWizard"
            icon="icons/sample.gif"
            id="de.cau.cs.kieler.cakefeed.xtend.importWizards.ImportWizard"
            name="Import File">
         <description>
            Import a file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.exportWizards">
      <category
            id="de.cau.cs.kieler.cakefeed.xtend.exportWizards.sampleCategory"
            name="Sample File Export">
      </category>
      <wizard
            category="de.cau.cs.kieler.cakefeed.xtend.exportWizards.sampleCategory"
            class="de.cau.cs.kieler.cakefeed.xtend.exportWizards.ExportWizard"
            icon="icons/sample.gif"
            id="de.cau.cs.kieler.cakefeed.xtend.exportWizards.ExportWizard"
            name="Export File">
         <description>
            Import a file from the local file system into the workspace.
         </description>
      </wizard>
   </extension>

</plugin>
