<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="de.cau.cs.kieler.kex.ui.actionSet"
            label="KIELER Example Management"
            visible="true">
         <menu
               id="kexMenu"
               label="KEX">
            <separator
                  name="exportGroup">
            </separator>
            <separator
                  name="importGroup">
            </separator>
         </menu>
         <action
               class="de.cau.cs.kieler.kex.ui.actions.ImportAction"
               id="de.cau.cs.kieler.kex.ui.actions.import"
               label="KIELER Example Import"
               menubarPath="kexMenu/importGroup"
               style="push"
               tooltip="Import examples to your local workspace">
         </action>
         <action
               class="de.cau.cs.kieler.kex.ui.actions.ExportAction"
               id="de.cau.cs.kieler.kex.ui.export"
               label="KIELER Example Export"
               menubarPath="kexMenu/exportGroup"
               style="push"
               tooltip="Export examples of your local workspace">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.cau.cs.kieler"
               label="KIELER"
               mnemonic="K">
            <menu
                  icon="icons/keksIcon.jpg"
                  id="de.cau.cs.kieler.examplemanagement"
                  label="ExampleManagement"
                  mnemonic="KE">
               <command
                     commandId="de.cau.cs.kieler.kex.ui.import"
                     label="Import"
                     style="push">
               </command>
               <command
                     commandId="de.cau.cs.kieler.kex.ui.export"
                     label="Export"
                     style="push">
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.cau.cs.kieler.kex.ui.examplecategory"
            name="Example Category">
      </category>
      <command
            categoryId="de.cau.cs.kieler.kex.ui.examplecategory"
            id="de.cau.cs.kieler.kex.ui.import"
            name="Import">
      </command>
      <command
            categoryId="de.cau.cs.kieler.kex.ui.examplecategory"
            id="de.cau.cs.kieler.kex.ui.export"
            name="Export">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.kex.ui.handlers.ExampleImportHandler"
            commandId="de.cau.cs.kieler.kex.ui.import">
      </handler>
      <handler
            class="de.cau.cs.kieler.kex.ui.handlers.ExampleExportHandler"
            commandId="de.cau.cs.kieler.kex.ui.export">
      </handler>
   </extension>
</plugin>
