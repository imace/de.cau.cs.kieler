<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.cau.cs.kieler.editor.KittyEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="kitty"
            icon="icons/file.gif"
            id="de.cau.cs.kieler.editor.KittyEditor"
            name="kitty Editor">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.newWizards">
         
		<wizard
			category="org.openarchitectureware.xtext.wizards"
			class="de.cau.cs.kieler.wizards.NewKittyProjectWizard"
			icon="icons/template.gif"
			id="de.cau.cs.kieler.wizards.NewKittyProjectWizard"
			name="kitty Project"
			project="true">
		</wizard>
         
		<wizard
			category="org.openarchitectureware.xtext.wizards"
			class="de.cau.cs.kieler.wizards.NewKittyFileWizard"
			icon="icons/file.gif"
			id="de.cau.cs.kieler.wizards.NewKittyFileWizard"
			name="kitty Editor file">
		</wizard>
	</extension>
</plugin>
