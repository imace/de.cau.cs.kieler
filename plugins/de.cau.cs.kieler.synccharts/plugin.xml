<plugin>
   <extension-point id="triggerListener" name="Trigger Listener" schema="schema/triggerListener.exsd"/>


   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://kieler.cs.cau.de/synccharts/0.2.3"
            class="de.cau.cs.kieler.synccharts.SyncchartsPackage"
            genModel="model/synccharts.genmodel"/>
   </extension>
   <extension
         point="de.cau.cs.kieler.synccharts.triggerListener">
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.TriggerListenerIDs">
      </triggerListener>
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.TriggerListenerPriorities">
      </triggerListener>
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.TriggerListenerChoice">
      </triggerListener>
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.TriggerListenerDebug">
      </triggerListener>
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.TriggerListenerRecursiveAdd">
      </triggerListener>
      <triggerListener
            class="de.cau.cs.kieler.synccharts.listener.NoteSynchronizationTriggerListener">
      </triggerListener>
   </extension>
      <extension
         point="org.eclipse.gmf.runtime.diagram.ui.editpolicyProviders">
      <editpolicyProvider
            class="de.cau.cs.kieler.core.ui.policies.BalloonPopupEditPolicyProvider">
         <Priority
               name="Lowest">
         </Priority>
      </editpolicyProvider>
   </extension>
      <extension
            point="de.cau.cs.kieler.core.model.Validation">
         <ePackageDefinition
               ePackageClass="de.cau.cs.kieler.synccharts.SyncchartsPackage"
               ePackageId="de.cau.cs.kieler.synccharts"
               ePackageNsURI="http://kieler.cs.cau.de/synccharts/0.2.3"
               nsURI="http://kieler.cs.cau.de/synccharts/0.2">
         </ePackageDefinition>
         <Checkfile
               ePackageId="de.cau.cs.kieler.synccharts"
               id="de.cau.cs.kieler.synccharts.SyncchartsChecks"
               isEnabledByDefault="true"
               isWrapExistingValidator="true"
               name="Synccharts Checks"
               path="model/SyncchartsChecks.chk"
               tooltip="Checks whether the syncchart is valid.">
            <referenceEPackageNsURI
                  nsURI="http://kieler.cs.cau.de/expressions">
            </referenceEPackageNsURI>
         </Checkfile>
         <Checkfile
               ePackageId="de.cau.cs.kieler.synccharts"
               id="de.cau.cs.kieler.synccharts.KleptoChecks"
               isEnabledByDefault="true"
               isWrapExistingValidator="true"
               name="Klepto Checks"
               path="model/SyncchartsKleptoChecks.chk"
               tooltip="Check whether the syncchart can be simulated with Klepto.">
            <referenceEPackageNsURI
                  nsURI="http://kieler.cs.cau.de/expressions">
            </referenceEPackageNsURI>
         </Checkfile>
         <Checkfile
               ePackageId="de.cau.cs.kieler.synccharts"
               id="de.cau.cs.kieler.synccharts.ScChecks"
               isEnabledByDefault="false"
               isWrapExistingValidator="true"
               name="SC Checks"
               path="model/SyncchartsScChecks.chk"
               tooltip="Checks whether SC code can be generated from the syncchart.">
            <referenceEPackageNsURI
                  nsURI="http://kieler.cs.cau.de/expressions">
            </referenceEPackageNsURI>
         </Checkfile>
      </extension>

</plugin>
