<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="layoutProviders" name="Layout Providers" schema="schema/layoutProviders.exsd"/>
   <extension-point id="layoutListeners" name="Layout Listeners" schema="schema/layoutListeners.exsd"/>
   <extension-point id="layoutInfo" name="Layout Info" schema="schema/layoutInfo.exsd"/>
   <extension
         point="org.eclipse.emf.ecore.generated_package">
      <package
            class="de.cau.cs.kieler.kiml.layout.klayoutdata.KLayoutDataPackage"
            genModel="model/klayoutdata.genmodel"
            uri="http://kieler.cs.cau.de/KLayoutData">
      </package>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.layout.layoutProviders">
      <category
            id="de.cau.cs.kieler.layouter.category"
            name="KIELER">
      </category>
      <layoutProvider
            class="de.cau.cs.kieler.kiml.layout.util.BoxLayoutProvider"
            category="de.cau.cs.kieler.layouter.category"
            id="de.cau.cs.kieler.kiml.layouter.boxLayout"
            name="Box Layout">
         <supportedDiagram
               priority="10"
               type="de.cau.cs.kieler.layout.diagrams.boxes">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.priority">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.expandNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.aspectRatio">
         </knownOption>
      </layoutProvider>
      <layoutType
            id="de.cau.cs.kieler.layout.types.layered"
            name="Layered">
      </layoutType>
      <layoutType
            id="de.cau.cs.kieler.layout.types.orthogonal"
            name="Orthogonal">
      </layoutType>
      <layoutType
            id="de.cau.cs.kieler.layout.types.force"
            name="Force">
      </layoutType>
      <layoutType
            id="de.cau.cs.kieler.layout.types.circle"
            name="Circular">
      </layoutType>
      <layoutType
            id="de.cau.cs.kieler.layout.types.radial"
            name="Radial">
      </layoutType>
      <layoutOption
            appliesTo="parents"
            description="Select either a specific layout algorithm or a layout type"
            id="de.cau.cs.kieler.layout.options.layoutHint"
            name="Layout Provider or Type"
            type="string">
      </layoutOption>
      <layoutOption
            appliesTo="parents,nodes,edges,ports,labels"
            description="Indicates that no layout should be done for the diagram part"
            id="de.cau.cs.kieler.layout.options.noLayout"
            name="No Layout"
            type="boolean">
      </layoutOption>
      <layoutOption
            description="Identifier of a diagram type that is associated with the children of the respective node"
            id="de.cau.cs.kieler.layout.options.diagramType"
            name="Diagram Type"
            type="string">
      </layoutOption>
      <layoutOption
            appliesTo="labels"
            description="Defines where an edge label shall be placed: at the source, center, or target"
            id="de.cau.cs.kieler.layout.options.edgeLabelPlacement"
            name="Edge Label Placement"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Defines how edges are routed"
            id="de.cau.cs.kieler.layout.options.edgeRouting"
            name="Edge Routing"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Overall direction of edges: horizontal or vertical"
            id="de.cau.cs.kieler.layout.options.layoutDirection"
            name="Layout Direction"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="nodes"
            description="Defines constraints of the position of the ports of a node"
            id="de.cau.cs.kieler.layout.options.portConstraints"
            name="Port Constraints"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="nodes"
            description="Defines whether the size of a node is fixed"
            id="de.cau.cs.kieler.layout.options.fixedSize"
            name="Fixed Size"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Minimal amount of space to be left between objects"
            id="de.cau.cs.kieler.layout.options.minSpacing"
            name="Object Spacing"
            type="float">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Minimal amount of space to be left to the border"
            id="de.cau.cs.kieler.layout.options.borderSpacing"
            name="Border Spacing"
            type="float">
      </layoutOption>
      <layoutOption
            appliesTo="edges"
            description="Factor for spacing of edge labels to the respective edge"
            id="de.cau.cs.kieler.layout.options.labelSpacing"
            name="Label Spacing"
            type="float">
      </layoutOption>
      <layoutOption
            appliesTo="nodes,edges"
            description="Defines the priority of an object; its meaning depends on the specific layout algorithm"
            id="de.cau.cs.kieler.layout.options.priority"
            name="Priority"
            type="int">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="If active, nodes are expanded to fill the area of their parent"
            id="de.cau.cs.kieler.layout.options.expandNodes"
            name="Expand Nodes"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Seed used for pseudo-random number generators to control the layout algorithm"
            id="de.cau.cs.kieler.layout.options.randomSeed"
            name="Randomization Seed"
            type="int">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Optimize the layout for user interaction by considering previous layout"
            id="de.cau.cs.kieler.layout.options.interactive"
            name="Interactive"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="edges"
            description="The type of the edge."
            id="de.cau.cs.kieler.layout.options.edgeType"
            name="Edge Type"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="The aimed aspect ratio of the drawing, that is the quotient of width by height"
            id="de.cau.cs.kieler.layout.options.aspectRatio"
            name="Aspect Ratio"
            type="float">
      </layoutOption>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.layout.layoutInfo">
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.general"
            name="General">
      </diagramType>
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.stateMachine"
            name="State Machine">
      </diagramType>
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.dataFlow"
            name="Data Flow Diagram">
      </diagramType>
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.classDiagram"
            name="Class Diagram">
      </diagramType>
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.usecaseDiagram"
            name="Use Case Diagram">
      </diagramType>
      <diagramType
            id="de.cau.cs.kieler.layout.diagrams.boxes"
            name="Unconnected Boxes">
      </diagramType>
      <option
            class="org.eclipse.emf.ecore.EPackage"
            option="de.cau.cs.kieler.layout.options.diagramType"
            value="de.cau.cs.kieler.layout.diagrams.classDiagram">
      </option>
      <option
            class="org.eclipse.emf.ecore.EReference"
            option="de.cau.cs.kieler.layout.options.edgeType"
            value="ASSOCIATION">
      </option>
      <option
            class="org.eclipse.emf.ecoretools.diagram.edit.parts.EClassESuperTypesEditPart"
            option="de.cau.cs.kieler.layout.options.edgeType"
            value="GENERALIZATION">
      </option>
      <option
            class="org.eclipse.gmf.ecore.edit.parts.EClassESuperTypesEditPart"
            option="de.cau.cs.kieler.layout.options.edgeType"
            value="GENERALIZATION">
      </option>
   </extension>

</plugin>
