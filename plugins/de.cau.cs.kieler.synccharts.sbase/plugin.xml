<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
         point="de.cau.cs.kieler.ksbase.configuration">
               <configuration
                     XtendFile="src/transformations/feature.ext"
                     contextID="de.cau.cs.kieler.synccharts.diagram.ui.diagramContext"
                     createMenu="true"
                     createToolbar="true"
                     editor="de.cau.cs.kieler.synccharts.diagram.part.SyncchartsDiagramEditor"
                     menuLocationURI="menu:org.eclipse.ui.main.menu?after=window"
                     menuName="KIELER"
                     packageName="de.cau.cs.kieler.synccharts.SyncchartsPackage"
                     toolbarLocationURI="toolbar:org.eclipse.ui.views.ContentOutline?after=additions">
         <transformation
               keyboardShortcut="M1 + K S"
               name="Add Successor State"
               selectionCount="1"
               showInMenu="true"
               showInToolbar="true"
               transformation="addSuccessorState">
            <element_selection
                  class="de.cau.cs.kieler.synccharts.diagram.edit.parts.State2EditPart">
            </element_selection>
         </transformation>
         <transformation
               keyboardShortcut="M1 + K P"
               name="Add Predecessor State"
               selectionCount="1"
               showInMenu="true"
               showInToolbar="true"
               transformation="addPredecessorState">
            <element_selection
                  class="de.cau.cs.kieler.synccharts.diagram.edit.parts.State2EditPart">
            </element_selection>
         </transformation>
         <transformation
               keyboardShortcut="M1 + K C"
               name="Add Choice"
               selectionCount="1"
               showInMenu="true"
               showInToolbar="true"
               transformation="addChoice">
            <element_selection
                  class="de.cau.cs.kieler.synccharts.diagram.edit.parts.State2EditPart">
            </element_selection>
         </transformation>
         <transformation
               keyboardShortcut="M1 + K F"
               name="Flip Transition"
               selectionCount="2"
               showInMenu="true"
               showInToolbar="true"
               transformation="flipTransition">
            <element_selection
                  class="de.cau.cs.kieler.synccharts.diagram.edit.parts.TransitionEditPart">
            </element_selection>
         </transformation>
      </configuration>
   </extension>
</plugin>
