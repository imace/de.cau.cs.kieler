<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutAlgorithm
            class="de.cau.cs.kieler.klodd.hierarchical.HierarchicalDataflowLayoutProvider"
            category="de.cau.cs.kieler"
            id="de.cau.cs.kieler.klodd.hierarchical"
            name="KLoDD Hierarchical"
            type="de.cau.cs.kieler.layout.types.layered">
         <supportedDiagram
               priority="10"
               type="de.cau.cs.kieler.layout.diagrams.dataFlow">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.layoutDirection">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.portConstraints">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klodd.interactive">
         </knownOption>
      </layoutProvider>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klodd.hierarchical.InteractionLevel"
            default="NONE"
            description="Select the level of interaction, that is how the algorithm respects the user&apos;s layout"
            id="de.cau.cs.kieler.klodd.interactive"
            name="Interactive"
            type="enum">
      </layoutOption>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.cau.cs.kieler.kiml.ui.preferences.layout"
            class="de.cau.cs.kieler.klodd.ui.preferences.KloddLayouterPreferencePage"
            id="edu.unikiel.rtsys.klodd.preferences"
            name="Data Flow">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.cau.cs.kieler.klodd.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   
</plugin>
