// Get ids of all initial state targets and their regions
Set[String] getInitialStates(Package package):
	let initialPseudoStates = (Set[Vertex])package.eAllContents.select(e|e.metaType == Pseudostate && ((Vertex)e).isInitial()):
	let initialStates = initialPseudoStates.outgoing.target:
	let initialRegions = initialStates.getParent():
	let all = initialStates.addAll(initialRegions):
	all.getId()
;

