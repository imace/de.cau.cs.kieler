<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension
        point="de.cau.cs.kieler.sim.kiem.json.datacomponent">
     <content
           class="de.cau.cs.kieler.klots.NXTDataDistributorWithKiVi"
           id="de.cau.cs.kieler.klots.NXTDataDistributorWithKiVi"
           name="NXT Communicator">
     </content>
  </extension>
  <extension
        point="de.cau.cs.kieler.sim.kiem.json.datacomponent">
     <content
           class="de.cau.cs.kieler.klots.NXTDataObserverWithKiVi"
           id="de.cau.cs.kieler.klots.NXTDataObserverWithKiVi"
           name="NXT Data Observer">
     </content>
  </extension>
  <extension
        point="org.eclipse.ui.editors">
     <editor
           class="de.cau.cs.kieler.klots.editor.SJEditorWithKiVi"
           contributorClass="de.cau.cs.kieler.klots.editor.SJEditorWithKiViContributor"
           extensions="java"
           icon="icons/editor7.gif"
           id="de.cau.cs.kieler.klots.editor.SJEditorWithKiVi"
           name="SJ Editor">
     </editor>
  </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="cau.cs.kieler.klots.editor"
            class="de.cau.cs.kieler.klots.editor.SJProjectNewFileWizard"
            icon="icons/editor7.gif"
            id="de.cau.cs.kieler.klots.editor.SJEditorNewFileWizard"
            name="Embedded SJ File">
      </wizard>
      <category
            id="de.cau.cs.kieler.klots.editor"
            name="SJ Wizards">
      </category>
      <wizard
            category="cau.cs.kieler.klots.editor"
            class="de.cau.cs.kieler.klots.editor.SJProjectNewSJProjectWizard"
            icon="icons/editor7.gif"
            id="de.cau.cs.kieler.klots.editor.SJEditorNewSJProjectWizard"
            name="Embedded SJ Project"
            project="true">
      </wizard>
   </extension>
   
   
   <!-- ############################ MARKERS ############################## -->
   
   <extension
      	point="org.eclipse.core.resources.markers"
      	id="instructionMarker"
      	name="SJ Instruction Marker">
      	<!-- <super type="org.eclipse.core.resources.textmarker"/> -->
      	<super type="org.eclipse.core.resources.taskmarker"/>
      	<persistent value="false"/>
      	<attribute name="instructionName"/>
      	<attribute name="instructionLabel"/>
      	<attribute name="instructionStart"/>
      	<attribute name="instructionEnd"/>
  </extension>
  <extension point="org.eclipse.ui.ide.markerImageProviders">
	<imageprovider
		markertype="de.cau.cs.kieler.klots.editor.instructionMarker"
		icon="icons/editor4.gif"
		id="de.cau.cs.kieler.klots.editor.instructionMarkerProvider">
	</imageprovider>
  </extension>
  <extension
        point="org.eclipse.ui.views">
     <view
           category="de.cau.cs.kieler"
           class="de.cau.cs.kieler.klots.views.SJInstructionsView"
           icon="icons/sjInstructionsViewIcon.png"
           id="de.cau.cs.kieler.klots.view.SJInstructionsView"
           name="SJ Instructions View">
     </view>
  </extension>
  <extension
        point="de.cau.cs.kieler.sim.kiem.json.datacomponent">
     <content
           class="de.cau.cs.kieler.klots.SJInstructionsViewDataObserver"
           id="de.cau.cs.kieler.klots.view.SJInstructionsViewDataObserver"
           name="SJ Instructions View Observer">
     </content>
  </extension>
     
</plugin>
