<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.sim.kiem.json.datacomponent">
      <content
            class="de.cau.cs.kieler.synccharts.kivi.StateActivityDataComponent"
            id="de.cau.cs.kieler.synccharts.kivi.stateactivitydatacomponent"
            name="State Activity Data Component">
      </content>
   </extension>
      <extension
         point="de.cau.cs.kieler.kivi.combinations">
      <combination
            class="de.cau.cs.kieler.synccharts.kivi.StateActivityCombination"
            description="Highlights active states during simulation."
            name="State Activity Combination">
      </combination>
   </extension>
   <extension
         point="de.cau.cs.kieler.kivi.effects">
      <effect
            class="de.cau.cs.kieler.synccharts.kivi.StateActivityHighlightEffect"
            description="Highlights a state with a red border."
            name="Highlight Effect">
      </effect>
   </extension>

</plugin>
