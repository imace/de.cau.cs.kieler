<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.cau.cs.kieler.kiml.ui.preferences.layout"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.preferences.GraphvizPreferencePage"
            id="de.cau.cs.kieler.kiml.graphviz.preferences"
            name="Graphviz">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.cau.cs.kieler.kiml.graphviz.layouter.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <category
            id="de.cau.cs.kieler.kiml.categories.graphviz"
            name="Graphviz">
      </category>
      <layoutAlgorithm
            category="de.cau.cs.kieler.kiml.categories.graphviz"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.GraphvizLayoutProvider"
            description="Layered drawings of directed graphs. The algorithm aims edges in the same direction (top to bottom, or left to right) and then attempts to avoid edge crossings and reduce edge length."
            id="de.cau.cs.kieler.kiml.graphviz.dot"
            name="Dot"
            parameter="dot"
            preview="images/dot.png"
            type="de.cau.cs.kieler.layout.types.layered">
         <supportedDiagram
               priority="10"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <supportedDiagram
               priority="10"
               type="de.cau.cs.kieler.layout.diagrams.stateMachine">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.layoutDirection">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.labelSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.graphviz.options.labelDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.debugMode">
         </knownOption>
      </layoutAlgorithm>
      <layoutAlgorithm
            category="de.cau.cs.kieler.kiml.categories.graphviz"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.GraphvizLayoutProvider"
            description="Spring model layouts. Neato attempts to minimize a global energy function, which is equivalent to statistical multi-dimensional scaling. The solution is achieved using stress majorization, though the older Kamada-Kawai algorithm, using steepest descent, is also available."
            id="de.cau.cs.kieler.kiml.graphviz.neato"
            name="Neato"
            parameter="neato"
            preview="images/neato.png"
            type="de.cau.cs.kieler.layout.types.force">
         <supportedDiagram
               priority="7"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <supportedDiagram
               priority="10"
               type="de.cau.cs.kieler.layout.diagrams.usecaseDiagram">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.randomSeed">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.interactive">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.labelSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.graphviz.options.labelDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.debugMode">
         </knownOption>
      </layoutAlgorithm>
      <layoutAlgorithm
            category="de.cau.cs.kieler.kiml.categories.graphviz"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.GraphvizLayoutProvider"
            description="Spring model layouts similar to those of Neato, but does this by reducing forces rather than working with energy. Fdp implements the Fruchterman-Reingold heuristic including a multigrid solver that handles larger graphs and clustered undirected graphs."
            id="de.cau.cs.kieler.kiml.graphviz.fdp"
            name="FDP"
            parameter="fdp"
            preview="images/fdp.png"
            type="de.cau.cs.kieler.layout.types.force">
         <supportedDiagram
               priority="6"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <supportedDiagram
               priority="6"
               type="de.cau.cs.kieler.layout.diagrams.usecaseDiagram">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.randomSeed">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.interactive">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.labelSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.graphviz.options.labelDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.debugMode">
         </knownOption>
      </layoutAlgorithm>
      <layoutAlgorithm
            category="de.cau.cs.kieler.kiml.categories.graphviz"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.GraphvizLayoutProvider"
            description="Radial layouts, after Graham and Wills &apos;97. The nodes are placed on concentric circles depending on their distance from a given root node."
            id="de.cau.cs.kieler.kiml.graphviz.twopi"
            name="Twopi"
            parameter="twopi"
            preview="images/twopi.png"
            type="de.cau.cs.kieler.layout.types.radial">
         <supportedDiagram
               priority="6"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.labelSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.graphviz.options.labelDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.debugMode">
         </knownOption>
      </layoutAlgorithm>
      <layoutAlgorithm
            category="de.cau.cs.kieler.kiml.categories.graphviz"
            class="de.cau.cs.kieler.kiml.graphviz.layouter.GraphvizLayoutProvider"
            description="Circular layout, after Six and Tollis &apos;99, Kaufmann and Wiese &apos;02. This is suitable for certain diagrams of multiple cyclic structures such as certain telecommunications networks."
            id="de.cau.cs.kieler.kiml.graphviz.circo"
            name="Circo"
            parameter="circo"
            preview="images/circo.png"
            type="de.cau.cs.kieler.layout.types.circle">
         <supportedDiagram
               priority="6"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.fixedSize">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.labelSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.graphviz.options.labelDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.debugMode">
         </knownOption>
      </layoutAlgorithm>
      <layoutOption
            appliesTo="edges"
            default="1.0"
            description="Distance of edge labels to the source or target node"
            id="de.cau.cs.kieler.kiml.graphviz.options.labelDistance"
            name="Label Distance"
            type="float">
      </layoutOption>
   </extension>

</plugin>
