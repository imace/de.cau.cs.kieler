<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutAlgorithm
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.klay.force.ForceLayoutProvider"
            description="Force-based algorithm of the KIELER Layouters project. Implements methods that follow physical analogies by simulating forces that move the nodes into a balanced distribution. Currently the original Eades model and the Fruchterman - Reingold model are supported."
            id="de.cau.cs.kieler.klay.force"
            name="KLay Force"
            preview="images/force.png"
            type="de.cau.cs.kieler.type.force">
         <supportedDiagram
               priority="8"
               type="de.cau.cs.kieler.layout.diagrams.general">
         </supportedDiagram>
         <supportedFeature
               feature="MULTI_EDGES"
               priority="-2">
         </supportedFeature>
         <supportedFeature
               feature="EDGE_LABELS"
               priority="-4">
         </supportedFeature>
         <knownOption
               default="1"
               option="de.cau.cs.kieler.priority">
         </knownOption>
         <knownOption
               default="80.0"
               option="de.cau.cs.kieler.spacing">
         </knownOption>
         <knownOption
               default="5.0"
               option="de.cau.cs.kieler.labelSpacing">
         </knownOption>
         <knownOption
               default="1"
               option="de.cau.cs.kieler.randomSeed">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.interactive">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.force.model">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.force.temperature">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.force.iterations">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.force.repulsion">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.force.repulsivePower">
         </knownOption>
         <knownOption
               default="true"
               option="de.cau.cs.kieler.separateConnComp">
         </knownOption>
      </layoutAlgorithm>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.force.model.ForceModelStrategy"
            default="FRUCHTERMAN_REINGOLD"
            description="Determines the model for force calculation."
            id="de.cau.cs.kieler.klay.force.model"
            name="Force Model"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="100"
            description="The number of iterations on the force model."
            id="de.cau.cs.kieler.klay.force.iterations"
            lowerBound="1"
            name="Iterations"
            type="int"
            upperBound="10000"
            variance="100.0">
      </layoutOption>
      <layoutOption
            appliesTo="edges"
            default="0"
            description="Determines how many bend points are added to the edge; such bend points are regarded as repelling particles in the force model"
            id="de.cau.cs.kieler.klay.force.repulsivePower"
            lowerBound="0"
            name="Repulsive Power"
            type="int"
            upperBound="100"
            variance="2.0">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="0.001"
            description="The temperature is used as a scaling factor for particle displacements."
            id="de.cau.cs.kieler.klay.force.temperature"
            lowerBound="0.00001"
            name="FR Temperature"
            type="float"
            upperBound="100.0"
            variance="0.1">
         <dependency
               option="de.cau.cs.kieler.klay.force.model"
               value="FRUCHTERMAN_REINGOLD">
         </dependency>
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="5.0"
            description="Factor for repulsive forces in Eades' model."
            id="de.cau.cs.kieler.klay.force.repulsion"
            lowerBound="0.01"
            name="Eades Repulsion"
            type="float"
            upperBound="100.0"
            variance="2.0">
         <dependency
               option="de.cau.cs.kieler.klay.force.model"
               value="EADES">
         </dependency>
      </layoutOption>
   </extension>

</plugin>
