<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutProvider
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.klay.planar.PlanarLayoutProvider"
            id="de.cau.cs.kieler.klay.planar.layouter.orthogonal"
            name="Orthogonal Layouter"
            type="de.cau.cs.kieler.layout.types.orthogonal">
         <knownOption
               option="de.cau.cs.kieler.klay.planar.options.planarTestingAlgorithm">
         </knownOption>
      </layoutProvider>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.planar.planarity.PlanarityTestStrategy"
            default="BOYER_MYRVOLD_ALGORITHM"
            description="Defines which algorithm to use for planar testing."
            id="de.cau.cs.kieler.klay.planar.options.planarTestingAlgorithm"
            name="Planar Testing Algorithm"
            type="enum">
      </layoutOption>
   </extension>
   <extension
         point="de.cau.cs.kieler.kiml.grana.analysisProviders">
      <provider
            category="de.cau.cs.kieler.kiml.grana.basic"
            class="de.cau.cs.kieler.klay.planar.PlanarityAnalysis"
            description="Check if a graph is planar, i.e. if a embedding for the graph exists, so that there are no crossing edges."
            id="de.cau.cs.kieler.klay.planar.analysis.planarity"
            name="Planarity Analysis">
      </provider>
   </extension>

</plugin>
