         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.ogdf.option.labelMarginDistance">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.kiml.ogdf.option.pageRatio">
         </knownOption>
      </layoutProvider>
      <layoutOption
            appliesTo="parents"
            description="Width / height ratio of connected components"
            id="de.cau.cs.kieler.kiml.ogdf.option.pageRatio"
            name="Page Ratio"
            type="float">
      </layoutOption>
