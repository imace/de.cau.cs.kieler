            description="Distance of labels to the nodes"
            id="de.cau.cs.kieler.kiml.ogdf.option.labelMarginDistance"
            name="Label Distance"
            type="float">
      </layoutOption>
      <layoutProvider
            category="de.cau.cs.kieler.kiml.categories.ogdf"
            class="de.cau.cs.kieler.kiml.ogdf.OgdfLayoutProvider"
            id="de.cau.cs.kieler.kiml.ogdf.sugiyama"
