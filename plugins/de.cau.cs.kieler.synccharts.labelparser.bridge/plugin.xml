<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.cau.cs.kieler.synccharts.labelparser.bridge.SyncchartsContentAdapter">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:de.cau.cs.kieler">
         <command
               commandId="de.cau.cs.kieler.synccharts.labelparser.bridge.parse"
               label="Parse Labels"
               style="push"
               tooltip="Re-Parse all transition and action labels of current SyncChart.">
            <visibleWhen
                  checkEnabled="true">
               <with
                     variable="activeEditorId">
                  <equals
                        value="de.cau.cs.kieler.synccharts.diagram.part.SyncchartsDiagramEditorID">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler"
            defaultHandler="de.cau.cs.kieler.synccharts.labelparser.bridge.ActionLabelParseHandler"
            description="Re-parse all transition and action labels of the current SyncChart."
            id="de.cau.cs.kieler.synccharts.labelparser.bridge.parse"
            name="Parse all action labels">
      </command>
   </extension>

</plugin>
