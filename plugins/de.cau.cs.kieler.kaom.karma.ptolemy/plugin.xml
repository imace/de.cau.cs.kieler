<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.karma">
      <configuration
            Priority="5"
            RenderingProvider="de.cau.cs.kieler.kaom.karma.ptolemy.KaomFigureProvider">
         <conditions>
            <customCondition
                  condition="de.cau.cs.kieler.karma.AnnotationCondition"
                  figureParam="ptolemy.actor.lib.MonitorValue"
                  figureSize="160,30"
                  key="ptolemyClass"
                  layoutParam="ptolemy.actor.lib.MonitorValue"
                  value="ptolemy.actor.lib.MonitorValue">
            </customCondition>
            <customCondition
                  condition="de.cau.cs.kieler.karma.RecursiveAnnotationCondition"
                  figureParam="ptolemy.domains.sr.kernel.SRDirector"
                  figureSize="102,32"
                  key="ptolemyClass"
                  layoutParam="ptolemy.domains.sr.kernel.SRDirector"
                  value="ptolemy.domains.sr.kernel.SRDirector">
            </customCondition>
            <customCondition
                  condition="de.cau.cs.kieler.karma.RecursiveAnnotationCondition"
                  figureParam="ptolemy.actor.TypedCompositeActor"
                  key="ptolemyClass"
                  layoutParam="ptolemy.actor.TypedCompositeActor"
                  value="ptolemy.actor.TypedCompositeActor">
            </customCondition>
            <compoundCondition
                  figureParam="icon">
               <customCondition
                     condition="de.cau.cs.kieler.karma.AnnotationCondition"
                     figureParam="icon"
                     key="ptolemyClass"
                     value="ptolemyClass">
               </customCondition>
               <customCondition
                     condition="de.cau.cs.kieler.karma.AnnotationCondition"
                     figureParam="icon"
                     key="_icon"
                     value="_icon">
               </customCondition>
            </compoundCondition>
            <customCondition
                  condition="de.cau.cs.kieler.karma.AnnotationExistsCondition"
                  figureParam="_IconDescription"
                  key="ptolemyClass"
                  value="ptolemyClass">
            </customCondition>
         </conditions>
         <editPart
               editPart="de.cau.cs.kieler.kaom.diagram.edit.parts.Entity3EditPart">
         </editPart>
      </configuration>
   </extension>

</plugin>
