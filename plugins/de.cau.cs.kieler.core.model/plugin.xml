<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler"
            defaultHandler="de.cau.cs.kieler.core.model.util.CheckFileManager"
            description="Toggles the Problem Markers."
            id="de.cau.cs.kieler.core.model.toggleProblemMarkers"
            name="Show Problem Markers">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            defaultHandler="de.cau.cs.kieler.core.model.handlers.ValidateActionHandler"
            id="de.cau.cs.kieler.core.model.validate"
            name="validate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:de.cau.cs.kieler">
         <command
               commandId="de.cau.cs.kieler.core.model.toggleProblemMarkers"
               style="toggle">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditor">
                  <test
                        forcePluginActivation="false"
                        property="de.cau.cs.kieler.core.model.isDiagramEditor">
                  </test>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:de.cau.cs.kieler">
         <command
               commandId="de.cau.cs.kieler.core.model.validate"
               icon="icons/validate.gif"
               style="pulldown">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditor">
                  <test
                        forcePluginActivation="false"
                        property="de.cau.cs.kieler.core.model.isDiagramEditor">
                  </test>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            class="de.cau.cs.kieler.core.model.ui.ValidationMenuContributionFactory"
            locationURI="menu:de.cau.cs.kieler.core.model.validate">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.core.model.preferences.ValidationManagerPreferencePage"
            id="de.cau.cs.kieler.core.model.validationManager"
            name="Validation Manager">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="de.cau.cs.kieler.core.model.util.KielerModelPropertyTester"
            id="de.cau.cs.kieler.core.model.isDiagramEditor"
            namespace="de.cau.cs.kieler.core.model"
            properties="isDiagramEditor"
            type="org.eclipse.ui.IEditorPart">
      </propertyTester>
   </extension>

</plugin>
