<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="Validation" name="Validation" schema="schema/Validation.exsd"/>
   <extension-point id="graphicalFrameworkBridges" name="Graphical Framework Bridges" schema="schema/graphicalFrameworkBridges.exsd"/>
      <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler"
            defaultHandler="de.cau.cs.kieler.core.model.handlers.ValidateActionHandler"
            id="de.cau.cs.kieler.core.model.validate"
            name="Validate">
      </command>
      <command
            categoryId="de.cau.cs.kieler"
            defaultHandler="de.cau.cs.kieler.core.model.handlers.RemoveMarkerHandler"
            description="Remove the visible problem markers in the current diagram, e.g. to make a proper screenshot."
            id="de.cau.cs.kieler.core.ui.command.removeMarkers"
            name="Remove Problem Markers">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:de.cau.cs.kieler">
         <separator
               name="de.cau.cs.kieler.core.model.separator3">
         </separator>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:de.cau.cs.kieler">
         <command
               commandId="de.cau.cs.kieler.core.model.validate"
               icon="icons/validate.gif"
               label="Validate"
               style="pulldown">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditor">
                  <test
                        property="de.cau.cs.kieler.core.model.editorTester">
                  </test>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.cau.cs.kieler">
        <command
              commandId="de.cau.cs.kieler.core.ui.command.removeMarkers"
              id="de.cau.cs.kieler.core.ui.command.removeMarkers"
              label="Remove Problem Markers"
              mnemonic="r"
              style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeEditor">
                  <test
                        property="de.cau.cs.kieler.core.model.editorTester">
                  </test>
               </with>
            </visibleWhen>
        </command>
      </menuContribution>
      <menuContribution
            class="de.cau.cs.kieler.core.model.ui.ValidationMenuContributionFactory"
            locationURI="menu:de.cau.cs.kieler.core.model.validate">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.core.model.preferences.ValidationManagerPreferencePage"
            id="de.cau.cs.kieler.core.model.validationManager"
            name="Validation Manager">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.cau.cs.kieler.core.model.validation.ValidationInformationCollector"></startup>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="de.cau.cs.kieler.core.model.GraphicalFrameworkService.SupportedTester"
            id="de.cau.cs.kieler.core.model.editorTester"
            namespace="de.cau.cs.kieler.core.model"
            properties="editorSupported"
            type="org.eclipse.ui.IEditorPart">
      </propertyTester>
   </extension>

</plugin>
