  (region != null ? pasteRegionIntoState(region, target) : 
   (states != null ? pasteStatesIntoState(states, target) : 
    (regions != null ? pasteRegionsIntoState(regions, target) : null)
   )
  )
 )
;

Void pasteStateIntoState(State state, State target):
