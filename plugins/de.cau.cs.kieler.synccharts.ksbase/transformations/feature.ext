;

// Paste transition
Void paste(State source, State target):
 let trans = getTransitionFromClipboard():
 ((trans != null && (source.parentRegion == target.parentRegion)) ?
 (source.outgoingTransitions.add(trans) ->
 trans.setTargetState(target)) :
 null) ->
 setSelection(trans)
;

