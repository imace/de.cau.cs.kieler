      <wizard
            id="de.cau.cs.kieler.synccharts.presentation.SyncchartsModelWizardID"
            name="%_UI_SyncchartsModelWizard_label"
            class="de.cau.cs.kieler.synccharts.presentation.SyncchartsModelWizard"
