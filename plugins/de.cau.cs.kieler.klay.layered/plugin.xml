<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutAlgorithm
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.klay.layered.LayeredLayoutProvider"
            description="Layer-based algorithm of the KIELER Layouters project."
            id="de.cau.cs.kieler.klay.layered"
            name="KLay Layered"
            preview="images/layered.png"
            type="de.cau.cs.kieler.type.layered">
         <knownOption
               default="20"
               option="de.cau.cs.kieler.spacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.edgeSpacingFactor">
         </knownOption>
         <knownOption
               default="20"
               option="de.cau.cs.kieler.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.priority">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.nodeLayering">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.crossingMinimization">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.edgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.portConstraints">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.straightEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.minimalAngle">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.distributeNodes">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.debugMode">
         </knownOption>
         <knownOption
               default="1"
               option="de.cau.cs.kieler.randomSeed">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.segmentateLayering">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.enhanceLayering">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.thoroughness">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.layerConstraint">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.alignment">
         </knownOption>
      </layoutAlgorithm>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p5edges.EdgeRoutingStrategy"
            default="POLYLINE"
            description="Strategy for edge routing"
            id="de.cau.cs.kieler.klay.layered.edgeRouting"
            name="Edge Routing"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="If enabled, edges with priority &gt; 0 are drawn straight instead of keeping the connected nodes in line."
            id="de.cau.cs.kieler.klay.layered.straightEdges"
            name="Straight Edges"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="0"
            description="Defines the minimal angle that short edges may have."
            id="de.cau.cs.kieler.klay.layered.minimalAngle"
            name="Minimal Angle"
            type="int">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            default="false"
            description="Whether wide nodes should be distributed to several layers"
            id="de.cau.cs.kieler.klay.layered.distributeNodes"
            name="Distribute Nodes"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p2layers.LayeringStrategy"
            default="NETWORK_SIMPLEX"
            description="Strategy for node layering"
            id="de.cau.cs.kieler.klay.layered.nodeLayering"
            name="Node Layering"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            class="de.cau.cs.kieler.klay.layered.p3order.CrossingMinimizationStrategy"
            default="LAYER_SWEEP"
            description="Strategy for crossing minimization."
            id="de.cau.cs.kieler.klay.layered.crossingMinimization"
            name="Crossing Minimization"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            description="Segmentates the Layering, if wide nodes are existing"
            id="de.cau.cs.kieler.klay.layered.segmentateLayering"
            name="Segmentate Layering"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="false"
            id="de.cau.cs.kieler.klay.layered.enhanceLayering"
            name="Enhance Layering"
            type="boolean">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="5"
            description="How much effort should be spent to produce a nice layout"
            id="de.cau.cs.kieler.klay.layered.thoroughness"
            name="Thoroughness"
            type="int">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="nodes"
            class="de.cau.cs.kieler.klay.layered.Properties.LayerConstraint"
            default="NONE"
            description="Determines a constraint on the placement of the node regarding the layering."
            id="de.cau.cs.kieler.klay.layered.layerConstraint"
            name="Layer Constraint"
            type="enum">
      </layoutOption>
      <layoutOption
            advanced="true"
            appliesTo="parents"
            default="0.5"
            description="Factor by which the object spacing is multiplied to arrive at the minimal spacing between edges"
            id="de.cau.cs.kieler.klay.layered.edgeSpacingFactor"
            name="Edge Spacing Factor"
            type="float">
      </layoutOption>
   </extension>

</plugin>
