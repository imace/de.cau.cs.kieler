<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.cau.cs.kieler.kiml.layoutProviders">
      <layoutProvider
            category="de.cau.cs.kieler.layouter.category"
            class="de.cau.cs.kieler.klay.layered.LayeredLayoutProvider"
            id="de.cau.cs.kieler.klay.layered"
            name="KLay Layered"
            type="de.cau.cs.kieler.layout.types.layered">
         <knownOption
               option="de.cau.cs.kieler.layout.options.minSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.borderSpacing">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.layout.options.priority">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.options.LayeredEdgeRouting">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.options.LayeredDebugInfo">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.options.LayeredStraightEdges">
         </knownOption>
         <knownOption
               option="de.cau.cs.kieler.klay.layered.options.MinimalAngle">
         </knownOption>
      </layoutProvider>
      <layoutOption
            appliesTo="parents"
            id="de.cau.cs.kieler.klay.layered.options.LayeredEdgeRouting"
            name="LayeredEdgeRouting"
            type="enum">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            id="de.cau.cs.kieler.klay.layered.options.LayeredDebugInfo"
            name="LayeredDebugInfo"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="If enabled, Edges with priority &gt; 0 are drawn straight instead of keeping the connected nodes in line."
            id="de.cau.cs.kieler.klay.layered.options.LayeredStraightEdges"
            name="LayeredStraightEdges"
            type="boolean">
      </layoutOption>
      <layoutOption
            appliesTo="parents"
            description="Defines the minimal angle short edges may have."
            id="de.cau.cs.kieler.klay.layered.options.MinimalAngle"
            name="MinimalAngle"
            type="int">
      </layoutOption>
   </extension>

</plugin>
