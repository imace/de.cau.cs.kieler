List[Instruction] getGotoInstruction(synccharts::State state):
	let out = {}:
	let goto = new Goto:
		(
			if state.isHierarchical() then (
				let abort = new Abort:
					out.add(abort) ->
					out.addAll(getRealStatePrio(state))
			) else (
				null
			)
		)
		->
		goto.setState((s::State)state.getSingleTraceTarget("S_surface"))->
		out.add(goto)
		->
		out
;

// depth return
List[Instruction] getGotoReturnInstruction(synccharts::State state):
	let out = {}:
	let goto = new Goto:
	if !(state.isFinal || state.outgoingTransitions.isEmpty) then (
		(
			if state.isHierarchical() then
				goto.setState((s::State)state.getSingleTraceTarget("S_main_depth"))
			else
				goto.setState((s::State)state.getSingleTraceTarget("S_depth"))
		)
		->
		out.add(goto)
	)
	else
		null
	->
	out
;