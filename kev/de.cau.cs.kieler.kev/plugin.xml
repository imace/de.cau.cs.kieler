<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="edu.unikiel.rtsys.kieler.kev.data" name="Data Interface Controller" schema="schema/edu.unikiel.rtsys.kieler.kev.data.exsd"/>
   <extension-point id="edu.unikiel.rtsys.kieler.kev.image" name="KEV predefined example image" schema="schema/edu.unikiel.rtsys.kieler.kev.image.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="KIELER"
            id="edu.unikiel.rtsys.kieler.kev">
      </category>
      <view
            name="Kiel Environment View"
            icon="icons/sample.gif"
            category="edu.unikiel.rtsys.kieler.kev"
            class="edu.unikiel.rtsys.kieler.kev.views.EnvironmentView"
            id="edu.unikiel.rtsys.kieler.kev.views.EnvironmentView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="edu.unikiel.rtsys.kieler.kev.views.EnvironmentView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="edu.unikiel.rtsys.kieler.kev.ui.KevPreferencePage"
            id="edu.unikiel.rtsys.kieler.kev.PreferencePage"
            name="KEV Setup">
      </page>
   </extension>
   <extension
         point="edu.unikiel.rtsys.kieler.kev.image">
      <image
            filename="examples/elevator.svg"
            id="edu.unikiel.rtsys.kieler.kev.image1"
            name="Elevator 2D">
      </image>
      <image
            filename="examples/elevator2.svg"
            id="edu.unikiel.rtsys.kieler.kev.image2"
            name="Elevator 3D">
      </image>
      <image
            filename="examples/railway-6d_i5_fullsim.svg"
            id="edu.unikiel.rtsys.kieler.kev.image3"
            name="Railway 6.0d i5 fullsim">
      </image>
      <image
            filename="examples/flap.svg"
            id="edu.unikiel.rtsys.kieler.kev.image4"
            name="High-Lift Flap Panel">
      </image>
      <image
            filename="examples/watertank.svg"
            id="edu.unikiel.rtsys.kieler.kev.image5"
            name="Watertank">
      </image>
      <image
            filename="examples/trafficlight.svg"
            id="edu.unikiel.rtsys.kieler.kev.image1"
            name="Trafficlight">
      </image>
   </extension>

</plugin>
