<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="de.cau.cs.kieler.sim.kiem.dataproducer" name="de.cau.cs.kieler.sim.kiem.dataproducer" schema="schema/de.cau.cs.kieler.sim.kiem.dataproducer.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="de.cau.cs.kieler"
            name="KIELER">
      </category>
      <view
            category="de.cau.cs.kieler"
            class="de.cau.cs.kieler.sim.kiem.views.KiemView"
            icon="icons/KiemIcon.gif"
            id="de.cau.cs.kieler.sim.kiem.view"
            name="Execution Manager"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="de.cau.cs.kieler.sim.kiem.views.KIEM"
               minimized="false"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.cau.cs.kieler.sim.kiem.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="de.cau.cs.kieler.sim.kiem.commands.category"
            id="de.cau.cs.kieler.sim.kiem.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.sim.kiem.handlers.SampleHandler"
            commandId="de.cau.cs.kieler.sim.kiem.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.cau.cs.kieler.sim.kiem.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.cau.cs.kieler.sim.kiem.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="de.cau.cs.kieler.sim.kiem.commands.sampleCommand"
                  id="de.cau.cs.kieler.sim.kiem.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.cau.cs.kieler.sim.kiem.toolbars.sampleToolbar">
            <command
                  commandId="de.cau.cs.kieler.sim.kiem.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="de.cau.cs.kieler.sim.kiem.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>


</plugin>
